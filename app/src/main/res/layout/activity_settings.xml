<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="24dp">

        <Button
            android:id="@+id/back"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:backgroundTint="@color/black"
            android:background="@android:color/transparent"
            app:icon="@drawable/button_arrow"
            app:iconTint="@color/black"
            tools:ignore="SpeakableTextPresentCheck" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/medium_padding"
            android:text="@string/main_settings"
            android:textSize="@dimen/primary_text_size"
            android:textColor="@color/black"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        >

        <Switch
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:checked="false"
            android:textSize="@dimen/secondary_text_size"
            android:text="@string/settings_themes"
            android:textColor="@color/black"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:backgroundTint="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/button_share"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:text="@string/settings_share"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/secondary_text_size" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:backgroundTint="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/button_assistant"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:text="@string/settings_help"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/secondary_text_size" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:backgroundTint="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/button_forward"

                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:text="@string/settings_agreement"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/secondary_text_size" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
