<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="14dp">

    <ImageView
        android:id="@+id/trackCoverImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/trackCoverImageView"
        android:layout_toLeftOf="@id/backButton"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Very important news text"
            android:lines="1"
            android:ellipsize="end"
            style="@style/ButtonTextStyle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Nirvana"
                android:lines="1"
                android:ellipsize="end"
                android:maxWidth="160dp"
                style="@style/SearchTextStyle"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/dot" />

            <TextView
                android:id="@+id/trackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SearchTextStyle"
                tools:text="1:22"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/button_forward"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:layout_marginStart="8dp"/>

</RelativeLayout>
