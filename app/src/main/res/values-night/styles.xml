<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="AppNameTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MainButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/button_weight</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

    </style>

    <style name="BackButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="icon">@drawable/button_arrow</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="TitleTextStyle" parent="android:Widget.TextView">
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SecondaryTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/blue</item>
    </style>
    <style name="SearchLine" parent="android:Widget.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/radius_line_night</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
    </style>

</resources>