<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="AppNameTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/button_weight</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

    </style>

    <style name="BackButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="icon">@drawable/button_arrow</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="TitleTextStyle" parent="android:Widget.TextView">
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchLine" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColorHint">#AEAFB4</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@drawable/radius_line</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
    </style>
    <style name="SearchTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/artist_text_size</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="ErrorTextStyle" parent="android:Widget.TextView">
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="RefreshButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:backgroundTint">?attr/colorOnSecondary</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/refresh_text_size</item>
    <item name="cornerRadius">@dimen/button_radius</item>
    <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="HistoryMessage" parent="android:Widget.TextView">
    <item name="android:textSize">@dimen/history_message</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="playButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintStart_toEndOf">@+id/btnAdd</item>
        <item name="layout_constraintEnd_toStartOf">@+id/btnFavorite</item>
        <item name="layout_constraintTop_toBottomOf">@+id/artistNameResult</item>
        <item name="layout_constraintBottom_toTopOf">@+id/progressTime</item>
        <item name="android:layout_marginTop">44dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="add_FavoriteButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginTop">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/button__add</item>
    </style>
    <style name="add_LikeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginTop">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/button__like</item>
    </style>
    <style name="playerTrackResult">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/ys_display_regular</item>
    <item name="android:textSize">13sp</item>
    <item name="android:textColor">@color/black</item>
    <item name="layout_constraintEnd_toEndOf">@id/rightBorder</item>
    </style>
    <style name="playerTrackInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="layout_constraintEnd_toEndOf">@id/rightBorder</item>
        <item name="layout_constraintStart_toStartOf">@id/leftBorder</item>
    </style>
    <style name="nameTrackStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="artistTrackStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">@dimen/refresh_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="MediaTextStyle" parent="android:Widget.TextView">
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textSize">@dimen/history_message</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="TabTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/refresh_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="MediaBackgroudStyle">
        <item name="android:background">@color/white</item>
    </style>
    <style name="TextInputStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/selector_color</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>
    <style name="TextInput">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="PlaylistTextStyle">
        <item name="android:textSize">@dimen/playlist_text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="AddNewPlaylist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/history_message</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="Dialog.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeStyle</item>
    </style>

    <style name="PositiveStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="NegativeStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>


</resources>